{
	"compilerOptions": {
		"strict": false,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"module": "Preserve",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"noImplicitAny": false,
		"resolveJsonModule": false,
		"noImplicitReturns": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types",
		],
	},
	"exclude": [
		"dist",
		"docs",
		"node_modules",
	],
	"include": [
		"**/*.js",
		"**/*.ts", "../shared/utils/EventEmitter.js",
	],
	"typeAcquisition": {
		"enable": true,
		"include": [],
	},
}
